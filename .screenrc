scrollback 10000
defscrollback 10000

escape ^Jj
bind h prev
bind n next
bind l windowlist
bindkey "\033[5D" next
bindkey "\033[5C" prev
bindkey ";9C" next
bindkey ";9D" prev

defkanji    utf-8
defencoding utf-8
encoding    utf-8 utf-8

caption always "%{= kb} %-w%{=bu dr}%n %t%{-}%+w"
screen -t
screen -t
screen -t

termcapinfo xterm* ti@:te@
startup_message off
vbell off
autodetach on
deflog on
logfile "$HOME/.screen/screen-%Y%m%d-%n.log"
bell_msg "^G"
select 1
